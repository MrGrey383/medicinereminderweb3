{
  "crons": [
    {
      "path": "/api/cron/send-medicine-reminders",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/send-daily-reports",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/cron/send-weekly-reports",
      "schedule": "0 20 * * 0"
    },
    {
      "path": "/api/cron/check-missed-doses",
      "schedule": "0 * * * *"
    }
  ],

  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
