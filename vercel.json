{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "functions/**/*.js",
      "use": "@vercel/node@3"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/functions/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/send-medicine-reminders",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/send-daily-reports",
      "schedule": "0 20 * * *"
    }
  ]
}